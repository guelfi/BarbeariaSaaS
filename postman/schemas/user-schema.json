{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "User Schema",
  "description": "Schema de validação para usuários",
  "properties": {
    "id": {
      "type": "string",
      "description": "ID único do usuário"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email do usuário"
    },
    "nome": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Nome completo do usuário"
    },
    "role": {
      "type": "string",
      "enum": ["admin", "barbeiro", "cliente"],
      "description": "Papel do usuário no sistema"
    },
    "tenantId": {
      "type": "string",
      "description": "ID do tenant (barbearia) do usuário"
    },
    "ativo": {
      "type": "boolean",
      "description": "Status ativo/inativo do usuário"
    },
    "criadoEm": {
      "type": "string",
      "format": "date-time",
      "description": "Data de criação do usuário"
    }
  },
  "required": ["id", "email", "nome", "role", "tenantId", "ativo"],
  "additionalProperties": false
}